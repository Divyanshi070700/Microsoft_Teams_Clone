<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Video App</title>
    <link rel="stylesheet" href="style.css" />
    
    <script type="text/javascript">
      var roomID = "<%= RoomId %>"
      // var roomID=" "
    </script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js" defer></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="socket.io/socket.io.js" defer></script>
    <script src="index.js" charset="utf-8" defer></script>
  </head>
  <body>
    <div id="videoDiv">
       <!-- <p>hello user</p> -->
       <!-- new added -->
       <div class="header">
        <div class="logo">
          <div class="header__back">
            <i class="fas fa-angle-left"></i>
          </div>
          <h3>Video Call </h3>
        </div>
      </div>  
      <div class="main">  
      <div class="main__left">
        <div class="videos__group">
          <div id="video-grid">
            <!-- <video></video>  -->
            <!-- added extra -->
          </div>
        </div>
        <div class="options">
          <div class="options__left">
            <div id="stopVideo" class="options__button">
              <i class="fa fa-video-camera"></i>
            </div>
            <div id="muteButton" class="options__button">
              <i class="fa fa-microphone"></i>
            </div>
            <div id="showChat" class="options__button">
              <i class="fa fa-comment"></i>
            </div>
            <div id="leavemeet" class="options__button">
              <!-- <button type="button">Leave</button> -->
              <button class="button button" >
                <!-- Leave -->
                <!-- <a href="/Login" class="text-white text-decoration-none">Leave</a> -->
                <a href="/newroom" class="text-white text-decoration-none"><i class="fas fa-phone-slash" title="Leave"></i></a>
              </button>
              
            </div>
          </div>

          <!-- CHAT ACTION IMMPLEMENTATION -->
          <div class="options__right">
            <div id="inviteButton" class="options__button">
              <i class="fas fa-user-plus"></i>
            </div>
          </div>
        </div>
      </div>
      <div class="main__right">
        <div class="main__chat_window">
            <div class="messages">
  
            </div>
        </div>
        <!-- old added -->
        <!-- <div class="main__message_container" id="chatting">
          <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
          <div id="send" class="options__button">
            <i class="fa fa-plus" aria-hidden="true"></i>
          </div>
        </div> -->
        <div class="main_message_container" id="chatting"></div>
        <form id="send-container">
          <input type="text" id="chat_message" placeholder="Type message here...">
          <button type="submit" id="send">SEND</button>
        </form>
      </div>
    </div>
       <!-- end new added -->
    </div>
  </body>
</html>

<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Video App</title>
  <link rel="stylesheet" href="style.css" />

  <script type="text/javascript">
    var roomID = "<%= RoomId %>"
  </script>
  <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js" defer></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/1.3.8/FileSaver.js"></script>
  <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
  <script src="socket.io/socket.io.js" defer></script>
  <script src="index.js" charset="utf-8" defer></script>
</head>

<body>
  <!-- RECORDING SCREEN AND VIDEO -->
  <div class="custom-modal" id='recording-options-modal'>
    <div class="custom-modal-content">
      <div class="row text-center">
        <div class="col-md-6 mb-2">
          <span class="record-option" id='record-video'>Record video</span>
        </div>
        <div class="col-md-6 mb-2">
          <span class="record-option" id='record-screen'>Record screen</span>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-12 text-center closebutton">
          <button class="btn btn-outline-danger" id='closeModal'>Close</button>
        </div>
      </div>
    </div>
  </div>

  <div id="videoDiv">
    <div class="header">
      <div class="logo">
        <div class="header__back">
          <i class="fas fa-angle-left"></i>
        </div>
        <h3>Video Call </h3>
      </div>
    </div>
    <div class="main">
      <div class="main__left">
        <div class="videos__group ">
          <div class="mirror-mode" id="video-grid">
          </div>
        </div>
        <div class="options">
          <div class="options__left">
            <!-- VIDEO BUTTON  -->
            <div id="stopVideo" class="options__button" title="Video">
              <i class="fa fa-video-camera"></i>
            </div>
            <!-- AUDIO BUTTON  -->
            <div id="muteButton" class="options__button" title="Audio">
              <i class="fa fa-microphone"></i>
            </div>
            <!-- CHAT SECTION  -->
            <div id="showChat" class="options__button" title="Show Chat">
              <i class="fa fa-comment"></i>
            </div>
            <!-- LEAVE FROM THE MEET  -->
            <div id="leavemeet" class="options__button" title="Leave Meet">
              <button class="button button">
                <!-- LEAVE BUTTON -->
                <a href="/newroom" class="text-white text-decoration-none"><i class="fas fa-phone-slash"
                    title="Leave"></i></a>
              </button>
            </div>
            <!-- SCREEN SHARING  -->
            <div class="room-comm options__button" id="screenshare">
              <button class="btn btn-sm rounded-0 btn-no-effect" id='share-screen' title="Share">
                <i class="fas fa-laptop" style="font-size:20px;color:#9400FF"></i>
              </button>
            </div>
            <!-- RECORD BUTTON -->
            <button class="btn btn-sm rounded-0 btn-no-effect options__button" id='record' title="Record">
              <i class="fa fa-dot-circle text-white"></i>
            </button>
          </div>

          <!-- CHAT ACTION IMPLEMENTATION -->
          <div class="options__right">
            <div id="inviteButton" class="options__button">
              <i class="fas fa-user-plus"></i>
            </div>
          </div>
        </div>
      </div>
      <div class="main__right">
        <div class="main__chat_window">
          <div class="messages">

          </div>
        </div>
        <div class="main_message_container" id="chatting"></div>
        <form id="send-container">
          <input type="text" id="chat_message" placeholder="Type message here...">
          <button type="submit" id="send">SEND</button>
        </form>
      </div>
    </div>
  </div>

</body>

</html>